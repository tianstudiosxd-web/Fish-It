-- Fish Count - Auto GiveCoins 1.000.000
-- Langsung fire saat di execute

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local player = Players.LocalPlayer
local amount = 1000000 -- 1 Juta Coins

print("=====================================")
print("Fish Count - Auto GiveCoins")
print("Amount: 1.000.000 Coins")
print("=====================================")
print("")
print("[*] Mencari RemoteEvent 'GiveCoins'...")

-- Fungsi untuk mencari RemoteEvent
local function findRemote(name)
    -- Cari di ReplicatedStorage
    local remote = ReplicatedStorage:FindFirstChild(name)
    if remote and remote:IsA("RemoteEvent") then
        return remote
    end
    
    -- Cari recursive di ReplicatedStorage
    for _, v in pairs(ReplicatedStorage:GetDescendants()) do
        if v:IsA("RemoteEvent") and v.Name == name then
            return v
        end
    end
    
    -- Cari di Workspace
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("RemoteEvent") and v.Name == name then
            return v
        end
    end
    
    -- Cari di seluruh game
    for _, v in pairs(game:GetDescendants()) do
        if v:IsA("RemoteEvent") and v.Name == name then
            return v
        end
    end
    
    return nil
end

-- Cari remote
local GiveCoinsRemote = findRemote("GiveCoins")

if not GiveCoinsRemote then
    warn("[X] GAGAL: RemoteEvent 'GiveCoins' tidak ditemukan!")
    warn("[!] Pastikan nama RemoteEvent benar")
    print("")
    print("[?] Daftar RemoteEvent yang tersedia:")
    
    local count = 0
    for _, v in pairs(game:GetDescendants()) do
        if v:IsA("RemoteEvent") then
            count = count + 1
            print("    - " .. v.Name .. " (" .. v:GetFullName() .. ")")
        end
    end
    
    if count == 0 then
        print("    (Tidak ada RemoteEvent ditemukan)")
    end
    
    return
end

print("[+] RemoteEvent ditemukan!")
print("    Path: " .. GiveCoinsRemote:GetFullName())
print("")
print("[*] Mengirim request 1.000.000 coins...")

-- Fire dengan berbagai format argument
local success = false

-- Format 1: Hanya amount
pcall(function()
    GiveCoinsRemote:FireServer(amount)
    success = true
end)

-- Format 2: String currency + amount
pcall(function()
    GiveCoinsRemote:FireServer("Coins", amount)
end)

-- Format 3: Table
pcall(function()
    GiveCoinsRemote:FireServer({Amount = amount})
end)

-- Format 4: Table dengan type
pcall(function()
    GiveCoinsRemote:FireServer({Type = "Coins", Amount = amount})
end)

-- Format 5: Multiple args
pcall(function()
    GiveCoinsRemote:FireServer("Add", "Coins", amount)
end)

print("")
if success then
    print("=====================================")
    print("[+] BERHASIL! Request terkirim!")
    print("[+] Amount: 1.000.000 Coins")
    print("=====================================")
    print("")
    print("[!] Cek apakah coins bertambah di game")
    print("[!] Jika tidak bertambah = Server AMAN")
    print("[!] Jika bertambah = Server VULNERABLE")
else
    warn("[X] Gagal mengirim request!")
end
